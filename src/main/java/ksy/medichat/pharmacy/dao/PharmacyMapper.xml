<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper   
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
        
<mapper namespace="ksy.medichat.pharmacy.dao.PharmacyMapper">
	<!-- Insert -->
	<insert id="insertPharmacy" parameterType="pharmacyVO">
		INSERT INTO pharmacy VALUES (
									  #{pha_num},
									  #{pha_addr},
									  #{pha_etc},
									  #{pha_info},
									  #{pha_mapImg},
									  #{pha_name},
									  #{pha_tell1},
									  #{pha_time1C},
									  #{pha_time2C},
									  #{pha_time3C},
									  #{pha_time4C},
									  #{pha_time5C},
									  #{pha_time6C},
									  #{pha_time7C},
									  #{pha_time8C},
									  #{pha_time1S},
									  #{pha_time2S},
									  #{pha_time3S},
									  #{pha_time4S},
									  #{pha_time5S},
									  #{pha_time6S},
									  #{pha_time7S},
									  #{pha_time8S},
									  #{pha_hpId},
									  #{pha_postCdn1},
									  #{pha_postCdn2},
									  #{pha_lon},
									  #{pha_lat},
									  #{pha_x},
									  #{pha_y},
									  #{pha_weekendAt}
									  )
	</insert>
	
	<!-- ========================= 병원 리스트 시작 ========================= -->
	<sql id="searchPharmacyByKeyword">
		<if test="keyword!=null and keyword!=''">
			AND (pha_addr LIKE '%' || #{keyword} || '%' OR
				 pha_name LIKE '%' || #{keyword} || '%' OR
				 pha_info LIKE '%' || #{keyword} || '%')
		</if>
	</sql>
	<sql id="searchPharmacyByCommonFilter">
		<if test="commonFilter!=null || commonFilter==''">
			<if test="commonFilter.contains('ING')">
				<if test="day==1">
					AND pha_time1c != 'null'
					AND pha_time1c >= #{time}
				</if>
				<if test="day==2">
					AND pha_time2c != 'null'
					AND pha_time2c >= #{time}
				</if>
				<if test="day==3">
					AND pha_time3c != 'null'
					AND pha_time3c >= #{time}
				</if>
				<if test="day==4">
					AND pha_time4c != 'null'
					AND pha_time4c >= #{time}
				</if>
				<if test="day==5">
					AND pha_time5c != 'null'
					AND pha_time5c >= #{time}
				</if>
				<if test="day==6">
					AND pha_time6c != 'null'
					AND pha_time6c >= #{time}
				</if>
				<if test="day==7">
					AND pha_time7c != 'null'
					AND pha_time7c >= #{time}
				</if>
			</if>
			<if test="commonFilter.contains('NIGHTTIME')">
				<if test="day==1">
					AND pha_time1c != 'null'
					AND pha_time1c > '1800'
				</if>
				<if test="day==2">
					AND pha_time2c != 'null'
					AND pha_time2c > '1800'
				</if>
				<if test="day==3">
					AND pha_time3c != 'null'
					AND pha_time3c > '1800'
				</if>
				<if test="day==4">
					AND pha_time4c != 'null'
					AND pha_time4c > '1800'
				</if>
				<if test="day==5">
					AND pha_time5c != 'null'
					AND pha_time5c > '1800'
				</if>
				<if test="day==6">
					AND pha_time6c != 'null'
					AND pha_time6c > '1300'
				</if>
				<if test="day==7">
					AND pha_time7c != 'null'
					AND pha_time7c > '1300'
				</if>
			</if>
			<if test="commonFilter.contains('WEEKEND')">
				AND pha_weekendat = 'Y'
			</if>
		</if>
	</sql>
	<sql id="searchPharmacyBySortType">
		<if test="sortType=='HIT'">
			,pha_hit DESC
		</if>
	</sql>
	
	<!-- selectListPharmacy -->
	<select id="selectListPharmacy" parameterType="map" resultType="pharmacyVO">
		SELECT *
		FROM ( SELECT a.* , ROWNUM rnum
		       FROM ( SELECT t.*
		              FROM ( SELECT p.*, 
		                            ROUND((6378137 * ACOS(LEAST(1,GREATEST (-1, COS(RADIANS(#{user_lat})) * COS(RADIANS(p.pha_lat)) * COS(RADIANS(p.pha_lon) - RADIANS(#{user_lon})) + SIN(RADIANS(#{user_lat})) * SIN(RADIANS(p.pha_lat))))))) AS around
		                     FROM pharmacy p
		                     where pha_lat between #{user_lat}-0.04 and #{user_lat}+0.04 and pha_lon between #{user_lon}-0.04 and #{user_lon}+0.04
		                     <include refid="searchPharmacyByKeyword"/>
							 <include refid="searchPharmacyByCommonFilter"/>
		                   ) t
		              ORDER BY around
		              <include refid="searchPharmacyBySortType"/>
		            ) a
		       <![CDATA[     
		       WHERE ROWNUM <= #{pageNum} * #{pageItemNum}
		       ]]>
		     )
		WHERE rnum > (#{pageNum} - 1) * #{pageItemNum}
	</select>
	
	<select id="selectPharmacy" parameterType="long" resultType="pharmacyVO">
		SELECT * FROM pharmacy WHERE pha_num=#{pha_num}
	</select>
	
	<update id="updateHitPharmacy" parameterType="long">
		UPDATE pharmacy SET pha_hit = pha_hit + 1
	</update>
	
	<update id="initHitPharmacy">
		UPDATE pharmacy SET pha_hit = 0
	</update>
</mapper>